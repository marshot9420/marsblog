{
  "extends": "@package/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src",
    "e2e",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
